<Window x:Class="IHM.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IHM"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="{DynamicResource TitreFenetreLoading}" Height="500" Width="700">

    <Window.Background>
        <SolidColorBrush Color="White" />
    </Window.Background>

    <Window.Resources>
        <FontFamily x:Key="OpenSauceOneBlack">/Ressources/Fonts/#Open Sauce One Black</FontFamily>
    </Window.Resources>

    <Grid>
        <TextBlock x:Name="TitreBienvenue" Text="{DynamicResource TitreBienvenue}" FontSize="72" Margin="36,164,36,252" FontFamily="{StaticResource OpenSauceOneBlack}" Foreground="#FF2B2B5A" TextAlignment="Center"/>
        <Image Source="Ressources/Img/Pare.png" Stretch="Uniform" VerticalAlignment="Top" HorizontalAlignment="Left" Height="228" Width="282" Margin="451,293,0,0" />
        <Image Source="Ressources/Img/logoIUT.png" Stretch="Uniform" VerticalAlignment="Top" HorizontalAlignment="Left" Height="169" Width="253" Margin="22,332,0,0" />
    </Grid>
</Window>
